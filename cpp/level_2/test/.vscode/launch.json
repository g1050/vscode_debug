{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "C++: 调试 test_demo",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/test_demo",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/build",
            "environment": [
                { "name": "LD_LIBRARY_PATH", "value": "${workspaceFolder}/../demo/release/lib" }
            ],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "为 gdb 启用漂亮打印",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
} 